{
  "name": "my-blog",
  "version": "1.0.0",
  "description": "정적 블로그 생성기 - GitHub Pages 호스팅용",
  "type": "module",
  "scripts": {
    "build": "node build.js",
    "dev": "node build.js && npx serve dist -l 3000",
    "watch": "node build.js --watch",
    "new": "node scripts/new-post.js",
    "clean": "node -e \"import('fs').then(fs => fs.rmSync('dist', {recursive:true, force:true}))\""
  },
  "keywords": [
    "blog",
    "static-site-generator",
    "markdown",
    "github-pages"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "gray-matter": "^4.0.3",
    "marked": "^11.1.1",
    "marked-highlight": "^2.1.0",
    "highlight.js": "^11.9.0",
    "glob": "^10.3.10",
    "chokidar": "^3.5.3"
  }
}



